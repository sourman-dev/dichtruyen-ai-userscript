define("theme-switch", () => {
  const mode = localStorage.getItem("colorScheme");
  const darkMode = van.state(
    (mode && mode === "dark") ??
      window.matchMedia?.("(prefers-color-scheme: dark)").matches
  );
  van.derive(() => {
    const mode = darkMode.val ? "dark" : "light";
